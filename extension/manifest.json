{
    "name": "SensCritique Notifier",
    "description": "Displays your SensCritique notifications unread count",
    "version": "0.0.1",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "alarms",
        "tabs",
        "http://www.senscritique.com/"
    ],
    "browser_action": {
        "default_icon": "icon-19.png"
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "minimum_chrome_version": "28",
    "manifest_version": 2
}